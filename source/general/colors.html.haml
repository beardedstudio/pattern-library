        %span.variable $link-color
      .swatch{style: 'background-color: #cd100b'}
        %span.color #cd100b
        %span.variable $link-color-hover

  %section.content-section
    %h2 Button Colors

    .palette-group
      .swatch{style: 'background-color: #008cbc'}
        %span.color #008cbc
        %span.variable $button-color
      .swatch{style: 'background-color: #005370'}
        %span.color #005370;
        %span.variable $button-color-hover
      .swatch{style: 'background-color: #dedede'}
        %span.color #dedede
        %span.variable $button-color-subtle
      .swatch{style: 'background-color: #ccc'}
        %span.color #ccc
        %span.variable $button-color-subtle-hover

  %section.content-section
    %h2 Background Colors

    .palette-group
      .swatch{style: 'background-color: #fff'}
